<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaykayitare.cardview.MainActivity">

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/politicscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        />

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/businesscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        />

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/sportscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        />

    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/techcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        card:card_layout_resourceID="@layout/native_material_largeimage_card"
        style="@style/card_external"
        />

</RelativeLayout>
